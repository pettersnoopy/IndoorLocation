<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="style_chat_text">
        <item name="android:textSize">18sp</item>
        <item name="android:password">true</item>
    </style>
    <style name="style_target_text">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_date_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFCDCACA</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="style_username_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_common_btn">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>

    </style>

    <!-- 按钮文字样式 -->
    <style name="tab_text_color">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">12dp</item>
        <!-- 从左向右跑马灯效果 -->
        <item name="android:ellipsize">marquee</item>
        <!-- 单行显示 -->
        <item name="android:singleLine">true</item>
    </style>


    <!--<item name="android:background">@drawable/tab_bg</item>-->
    <!-- 按钮样式 -->
    <style name="tab_button_bg">
        <item name="android:textAppearance">@style/tab_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
